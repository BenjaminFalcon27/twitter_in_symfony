{% extends 'base.html.twig' %}

{% block title %}Tweets index{% endblock %}

{% block body %}
    <h1>Tweets index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>User_id</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tweet in tweets %}
            <tr>
                <td>{{ tweet.id }}</td>
                <td>{{ tweet.content }}</td>
                <td>{{ tweet.userId }}</td>
                <td>{{ tweet.createdAt ? tweet.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tweet.updatedAt ? tweet.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_tweets_show', {'id': tweet.id}) }}">show</a>
                    <a href="{{ path('app_tweets_edit', {'id': tweet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tweets_new') }}">Create new</a>
{% endblock %}

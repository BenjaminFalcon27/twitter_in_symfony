{% extends 'base.html.twig' %}

{% block title %}Tweets{% endblock %}

{% block body %}
    <h1>Tweets</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tweet.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ tweet.content }}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ tweet.userId }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ tweet.createdAt ? tweet.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ tweet.updatedAt ? tweet.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tweets_index') }}">back to list</a>

    <a href="{{ path('app_tweets_edit', {'id': tweet.id}) }}">edit</a>

    {{ include('tweets/_delete_form.html.twig') }}
{% endblock %}

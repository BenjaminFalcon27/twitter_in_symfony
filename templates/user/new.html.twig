{% extends 'base.html.twig' %}

{% block title %}Nouveau compte
{% endblock %}

{% block body %}

	<div class="container-fluid">
		<div class="col-12">
			<div class="row">
				<div class="col-4"></div>
				<div class="col-4">
					<h1>Cr√©er un compte</h1>
					{{ form_start(form, {'attr': {'id': 'new_edit_user'}}) }}
					{# utilisation de classes bootstrap pour la mise en forme #}
					<div class="row ml-2">
						<div class="col-12">
							<div class="row">
								{{ form_label(form.username) }}
							</div>
							<div class="row w-50">
								{{ form_widget(form.username) }}
							</div>
						</div>
						<div class="col-12 mt-2">
							<div class="row">
								{{ form_label(form.password) }}
							</div>
							<div class="row w-50">
								{{ form_widget(form.password) }}
							</div>
						</div>
						<div class="col-12 mb-3 mt-3">
							<div class="row">
								<label for="verifpass">Saisir une seconde fois le mot de passe</label>
							</div>
							<div class="row w-50">
								<input type="password" id="verifpass" required>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<button class="btn btn-success">{{ button_label|default() }}<i class="fas fa-save"></i>
							</button>
							{{ form_end(form) }}
							<a href="{{ path('app_user_index') }}" class="btn btn-danger">
								<i class="fas fa-arrow-left"></i>
							</a>
						</div>
					</div>
				</div>
				<div class="col-4"></div>
			</div>
		</div>
	</div>
{% endblock %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://bootswatch.com/4/yeti/bootstrap.min.css">
        {% endblock %}
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="../assets/styles/app.css">
        <script src="https://kit.fontawesome.com/12bd49648b.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('home') }}">Accueil</a>
            {% if app.user %}
                {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-outline-warning" href="{{ path('admin') }}">Page admin</a>
                {% endif %}
                <div>
                        Bonjour {{ app.user.username }} <a class="btn btn-sm btn-danger" href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% else %}
                <div>
                    <a class="btn btn-sm btn-primary" href="{{ path('app_user_new') }}">S'inscrire</a>
                    <a class="btn btn-sm btn-success" href="{{ path('app_login') }}">Se connecter</a>
                </div>
            {% endif %}
        </nav>
        <div class="container">
            {% if message is defined %}
                <div class="alert alert-danger">
                        {{ message }}
                </div>
            {% endif %}
            {% block body %}
            {% endblock %}
        </div>
        {% block javascripts %}
            <script
                src="https://code.jquery.com/jquery-3.5.1.min.js"
                integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
                crossorigin="anonymous">
            </script>
            <script src="/js/signup-verif.js"></script>
        {% endblock %}
    </body>
</html>

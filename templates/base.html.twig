<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
            <link rel="stylesheet" href="/styles/style.css">
        {% endblock %}
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <script src="https://kit.fontawesome.com/12bd49648b.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('home') }}">Accueil</a>
            <i id="nav-logo" class="fa-brands fa-twitter fa-2xl"></i>
            {% if app.user %}
                <div>
                    Bonjour {{ app.user.username }} <a class="btn btn-sm btn-danger" href="{{ path('app_logout') }}">Déconnexion</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-sm btn-outline-warning" href="{{ path('app_user_index') }}">Page admin</a>
                    {% endif %}
                </div>
            {% else %}
                <div>
                    <a class="btn btn-sm btn-primary" href="{{ path('app_user_new') }}">S'inscrire</a>
                    <a class="btn btn-sm btn-success" href="{{ path('app_login') }}">Se connecter</a>
                </div>
            {% endif %}
        </nav>
        <div class="container">
            {% if message is defined %}
                <div class="alert alert-danger">
                        {{ message }}
                </div>
            {% endif %}
            {% block body %}
            {% endblock %}
        </div>
        {% block javascripts %}
            <script
                src="https://code.jquery.com/jquery-3.5.1.min.js"
                integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
                crossorigin="anonymous">
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
            </script>
            <script src="/js/signup-verif.js"></script>
        {% endblock %}
    </body>
</html>
